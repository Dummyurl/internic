<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_user_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/bottom_sheet_dimen_title_space"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    tools:context=".activities.RouteMapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_dimen_title_space"
        android:layout_marginLeft="@dimen/large_content_space"
        android:layout_marginTop="@dimen/content_space"
        android:layout_marginRight="@dimen/large_content_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_route_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginBottom="@dimen/content_space"
            android:text="@string/route_map_box_title_bottom_sheet"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/fontColor"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_route_detail"
            android:visibility="gone"
            android:layout_marginTop="@dimen/small_content_space"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_route_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableStart="@drawable/ic_clock_dark"
                android:drawableLeft="@drawable/ic_clock_dark"
                android:drawablePadding="@dimen/small_content_space"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@color/blackColor" />

            <TextView
                android:id="@+id/user_route_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_space"
                android:layout_marginLeft="@dimen/content_space"
                android:drawableStart="@drawable/ic_walk"
                android:drawableLeft="@drawable/ic_walk"
                android:drawablePadding="@dimen/small_content_space"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@color/blackColor" />

            <ProgressBar
                android:id="@+id/progress_user_route"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginBottom="@dimen/content_space"
                android:padding="@dimen/small_content_space"
                android:visibility="gone" />

        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_view_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_content_space"
                android:layout_marginRight="@dimen/large_content_space">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/layout_route_title"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/fontColor"
                    android:textStyle="bold" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_content_space"
                android:layout_marginRight="@dimen/large_content_space"
                android:layout_marginBottom="@dimen/content_space"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_route_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_space"
                    android:hint="@string/title_name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/user_route_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_description"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/grayColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_content_space"
                android:layout_marginTop="@dimen/content_space"
                android:layout_marginRight="@dimen/large_content_space"
                android:layout_marginBottom="@dimen/content_space"
                android:text="@string/route_description_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/fontColor"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddf1fc"
                android:orientation="vertical"
                android:paddingLeft="@dimen/large_content_space"
                android:paddingRight="@dimen/large_content_space"
                android:paddingBottom="@dimen/content_space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_space"
                        android:layout_weight="2"
                        android:text="@string/travel_distance_title"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                    <TextView
                        android:id="@+id/user_distan_route"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_space"
                        android:layout_weight="1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_space"
                        android:layout_weight="2"
                        android:text="@string/time_route_title"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                    <TextView
                        android:id="@+id/user_tim_route"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_space"
                        android:layout_weight="1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                </LinearLayout>
            </LinearLayout>

           <Button
               android:id="@+id/draw_route_coop"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="@dimen/small_content_space"
               style="?borderlessButtonStyle"
               android:text="Definir ruta en el mapa"
               android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>