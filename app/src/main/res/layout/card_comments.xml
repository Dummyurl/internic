<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/content_space"
                android:layout_marginLeft="@dimen/content_space"
                android:layout_marginRight="@dimen/content_space"
                android:layout_marginBottom="@dimen/content_space">

                <ImageView
                    android:id="@+id/card_complaint_user_profile"
                    android:layout_width="@dimen/small_image_profile"
                    android:layout_height="@dimen/small_image_profile"
                    android:layout_gravity="center"
                    android:contentDescription="@string/user_data_title"
                    android:background="@drawable/circle_place_holder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_space"
                    android:layout_marginBottom="@dimen/content_space"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_complaint_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/content_space"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                        tools:ignore="RtlHardcoded" />
                    <TextView
                        android:id="@+id/card_complaint_create_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/content_space"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/card_complaint_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_marginLeft="@dimen/content_space"
                android:layout_marginRight="@dimen/content_space"
                android:layout_marginBottom="@dimen/content_space"
                tools:ignore="RtlHardcoded" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/grayColor"
                android:background="@color/grayColor"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="@dimen/content_space"
                app:cardElevation="0dp"
                app:cardMaxElevation="1dp"
                app:cardCornerRadius="3dp">

                <ImageView
                    android:id="@+id/card_complaint_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="@dimen/content_space"
                    android:contentDescription="@string/user_data_title"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>