<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/profile_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:menu_colorPressed="@color/colorPrimary"
        app:menu_colorNormal="@color/colorAccent"
        app:menu_colorRipple="@color/colorAccent"
        app:menu_fab_label="@string/main"
        app:menu_labels_colorNormal="@color/colorWhite"
        app:menu_labels_colorPressed="@color/colorWhite"
        app:menu_labels_textColor="@color/fontColor"
        app:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/new_route"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_new_route"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_colorRipple="@color/colorAccent"
            app:fab_label="@string/new_route"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/new_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_new_releases"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_colorRipple="@color/colorAccent"
            app:fab_label="@string/new_news"
            app:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>
</FrameLayout>